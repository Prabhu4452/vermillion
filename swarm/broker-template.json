{
    "cap_add": [
        "ALL"
    ],
    "deploy": {
        "labels": {
            "type": "broker"
        },
        "placement": {
            "constraints": [
                "node.role == worker"
            ]
        }
    },
    "env_file": [
        ".env"
    ],
    "hostname": "broker",
    "image": "iudx/rabbitmq",
    "networks": [
        "iudx-net"
    ],
    "ports": [
        "15672:15672"
    ],
    "restart": "always",
    "volumes": [
        "broker-data:/var/lib/rabbitmq/",
        "./authenticator:/authenticator/",
        "./conf/rabbitmq:/etc/rabbitmq/"
    ]
}
