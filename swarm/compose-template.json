{
    "networks": {
        "iudx-net": {
            "driver": "overlay"
        }
    },
    "services": {
        "dbconnector": {
            "deploy": {
                "labels": {
                    "type": "dbconnector"
                },
                "placement": {
                    "constraints": [
                        "node.role == worker",
                        "node.labels.type == database"
                    ]
                }
            },
            "env_file": [
                ".env"
            ],
            "hostname": "dbconnector",
            "image": "iudx/dbconnector",
            "networks": [
                "iudx-net"
            ],
            "volumes": [
                "../iudx-dbconnector:/iudx-dbconnector/"
            ]
        },
        "elk": {
            "env_file": [
                ".env"
            ],
            "hostname": "elk",
	    "deploy": {
                "labels": {
                    "type": "database"
                },
                "placement": {
                    "constraints": [
                        "node.role == worker",
			"node.labels.type != broker"
                    ]
                }
            },
            "image": "nshou/elasticsearch-kibana",
            "networks": [
                "iudx-net"
            ],
            "ports": [
                "9200:9200",
                "5601:5601"
            ],
            "volumes": [
                "elk-data:/home/ideam/elasticsearch-6.2.4"
            ]
        },
        "postgres": {
            "env_file": [
                ".env"
            ],
	    "deploy": {
                "labels": {
                    "type": "auth-db"
                },
                "placement": {
                    "constraints": [
                        "node.role == manager"
                    ]
                }
            },
            "hostname": "postgres",
            "image": "iudx/postgres",
            "networks": [
                "iudx-net"
            ],
            "volumes": [
                "pgsql-data:/var/lib/postgresql"
            ]
        },
        "unbind-daemon": {
            "env_file": [
                ".env"
            ],
            "deploy": {
                "labels": {
                    "type": "unbind-daemon"
                },
                "placement": {
                    "constraints": [
                        "node.role == manager"
                    ]
                }
            },
            "hostname": "daemon",
            "image": "iudx/unbind-daemon",
            "networks": [
                "iudx-net"
            ]
        },
        "vertx": {
            "env_file": [
                ".env"
            ],
	    "deploy": {
                "labels": {
                    "type": "http-proxy"
                },
                "placement": {
                    "constraints": [
                        "node.role == manager"
                    ]
                },
		"replicas": 1
            },
            "hostname": "vertx",
            "image": "iudx/vertx",
            "networks": [
                "iudx-net"
            ],
            "ports": [
                "443:8443"
            ],
            "volumes": [
                "../iudx-api-server:/iudx-api-server/"
            ]

        }
    },
    "version": "3",
    "volumes": {
        "broker-data": null,
        "elk-data": null,
        "pgsql-data": null
    }
}
