{
    "networks": {
        "vermillion-net": {
            "driver": "overlay"
            }
    },
    "services": {
        "authenticator": {
            "deploy": {
                "labels": {
                    "type": "authenticator"
                },
                "placement": {
                    "constraints": [
                        "node.role==worker"
                    ]
                },
                "replicas": 1
            },
            "env_file": [
                ".env"
            ],
            "environment": [
                "WAIT_HOSTS=postgres:5432",
		"PROJECT_DIR=authenticator",
		"JAR_NAME=authenticator-fat.jar"
            ],
            "hostname": "authenticator",
            "image": "iudx/authenticator",
            "networks": [
                "vermillion-net"
            ],
            "restart": "always",
            "volumes": [
                "../authenticator:/authenticator/"
            ]
        },
        "postgres": {
            "deploy": {
                "labels": {
                    "type": "auth-db"
                },
                "placement": {
                    "constraints": [
                        "node.role == manager"
                    ]
                }
            },
            "env_file": [
                ".env"
            ],
            "hostname": "postgres",
            "image": "iudx/postgres",
            "networks": [
                "vermillion-net"
            ],
            "ports": [
                "5432:5432"
            ]
        },
        "vertx": {
            "deploy": {
                "labels": {
                    "type": "http-proxy"
                },
                "placement": {
                    "constraints": [
                        "node.role==manager"
                    ]
                },
                "replicas": 1
            },
            "env_file": [
                ".env"
            ],
            "environment": [
                "WAIT_HOSTS_TIMEOUT=120",
                "WAIT_HOSTS=postgres:5432,rabbit:5672,authenticator:80",
		"PROJECT_DIR=api-server",
		"JAR_NAME=api-server-fat.jar"
            ],
            "hostname": "vertx",
            "image": "iudx/java",
            "networks": [
                "vermillion-net"
            ],
            "ports": [
                "443:8443"
            ],
            "volumes": [
                "../api-server:/api-server/"
            ]
        }
    },
    "version": "3"
}
